
@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title.</h2>

@Html.ValidationSummary(true)

@using (Html.BeginForm())
{
    @Html.EditorForModel()
    
    <p>
        <span style="margin-top: 5px;">Don't have an account? Sign up @Html.ActionLink("here", "Register", "Account")</span>
        <br/>
        <button type="submit" class="btn btn-default">Login &raquo;</button>
    </p>

}

